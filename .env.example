# Node Environment
NODE_ENV=development

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3000

# Authentication - REQUIRED
# Generate a secure secret with at least 32 characters
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_key_here_minimum_32_characters_required
BETTER_AUTH_URL=http://localhost:3000

# Database - REQUIRED
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Rate Limiting (optional)
REDIS_URL=redis://localhost:6379

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password

# SMS/Twilio (optional - for phone number authentication)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Logging
LOG_LEVEL=info

# Prisma Security
PRISMA_ENGINE_PROTOCOL=graphql
PRISMA_QUERY_ENGINE_BINARY=
PRISMA_MIGRATION_ENGINE_BINARY=
PRISMA_INTROSPECTION_ENGINE_BINARY=
PRISMA_FMT_BINARY=

# Database Security
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_MAX_CONNECTIONS=100
DB_MIN_CONNECTIONS=5

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FILE=./logs/audit.log

# Error Handling
ERROR_STACK_TRACE_ENABLED=false
ERROR_DETAILED_LOGGING=false
